@model IEnumerable<Model.EF.product>
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var newProductList = Model.Where(p => p.product_status == 1).OrderByDescending(p => p.product_createdAt).Take(10).ToList();
    var featureProductList = Model.Where(p => p.product_status == 1).Take(10).OrderBy(p => p.product_id).ToList();
    var womenProductList = Model.Where(p => p.product_status == 1 && p.category_id == 1).Take(10).OrderBy(p => p.product_id).ToList();
    var menProductList = Model.Where(p => p.product_status == 1 && p.category_id == 2).Take(10).OrderBy(p => p.product_id).ToList();
}

<!--================Home Banner Area =================-->
<section class="home_banner_area">
    <div class="overlay"></div>
    <div class="banner_inner d-flex align-items-center">
        <div class="container">
            <div class="banner_content row">
                <div class="offset-lg-2 col-lg-8">
                    <h3>
                        Premium Fragrances from
                        <br />Prestige Brands
                    </h3>
                    <p>We are certificated partners of prestige fragrance brands from all over the world. </p>
                    <a class="white_bg_btn" href="#feature-product">View Our Collection</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Home Banner Area =================-->
<!--================Hot Deals Area =================-->
<section class="hot_deals_area section_gap">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6">
                <a class="hot_deal_link" href="category.jsp?brandId=1">
                    <div class="hot_deal_box">
                        <img class="img-fluid" src="~/Assets/img/product/hot_deals/chanel-deal.jpg" alt="Hot Deal">
                        <div class="content">
                            <h2>Chanel's Collections</h2>
                            <p>Explore</p>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-lg-6">
                <a class="hot_deal_link" href="category.jsp?brandId=4">
                    <div class="hot_deal_box">
                        <img class="img-fluid" src="~/Assets/img/product/hot_deals/versace-deal.jpg" alt="Hot Deal">
                        <div class="content">
                            <h2>The Charming of Versace</h2>
                            <p>Explore</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>
<!--================End Hot Deals Area =================-->
<!--================Clients Logo Area =================-->
<section class="clients_logo_area">
    <div class="container-fluid">
        <div class="clients_slider owl-carousel">
            <div class="item">
                <img src="~/Assets/img/clients-logo/chanel.png" alt="Brand Logo">
            </div>
            <div class="item">
                <img src="~/Assets/img/clients-logo/dior.png" alt="Brand Logo">
            </div>
            <div class="item">
                <img src="~/Assets/img/clients-logo/lolita-lempicka.png" alt="Brand Logo">
            </div>
            <div class="item">
                <img src="~/Assets/img/clients-logo/versace.png" alt="Brand Logo">
            </div>
            <div class="item">
                <img src="~/Assets/img/clients-logo/victoria-secret.png" alt="Brand Logo">
            </div>
        </div>
    </div>
</section>
<!--================End Clients Logo Area =================-->
<!--================New Product Area =================-->
<section class="new_product_area section_gap" id="new-product">
    <div class="main_box">
        <div class="container-fluid">
            <div class="row">
                <div class="main_title">
                    <h2>New Arrivals</h2>
                    <p></p>
                </div>
            </div>
            <div class="row">
                @*Get 10 product sorted by order ID with acitve status *@
                @foreach (var item in newProductList)
                {
                    <div class="col ">
                        <div class="f_p_item">
                            <div class="f_p_img">
                                <img class="img-fluid" src="@ViewBag.imgPath/@item.product_id/@item.productImgs.First().img_path" alt="@item.product_name">
                                <div class="p_icon">
                                    <a href="#">
                                        <i class="lnr lnr-heart"></i>
                                    </a>
                                    <a href="#">
                                        <i class="lnr lnr-cart"></i>
                                    </a>
                                </div>
                            </div>
                            <a href="@Url.Action("store", "Home", new { id = item.product_id})">
                                <h4>@item.product_name</h4>
                            </a>

                            <h5>$ @item.product_currentPrice</h5>
                        </div>

                    </div>
                }
            </div>
            <div class="row">
                <a class="green_btn mx-auto" href="category.jsp">See more</a>
            </div>
        </div>
    </div>
</section>
<!--================End New Product Area =================-->
