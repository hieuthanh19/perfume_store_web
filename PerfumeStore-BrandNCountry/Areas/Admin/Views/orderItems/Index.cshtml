@model IEnumerable<Model.EF.orderItem>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-header row">
    <div class="content-header-left col-md-12 col-12 mb-2">
        <div class="row breadcrumbs-top">
            <div class="col-12">
                <h2 class="content-header-title float-left mb-0">Order item (@Model.Count())</h2>
                <div class="breadcrumb-wrapper col-12">
                    @*<ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="./">Dashboard</a>
                            </li>
                            <li class="breadcrumb-item">
                                Brands
                            </li>
                        </ol>*@
                </div>
            </div>
        </div>
    </div>
</div>
<div class="content-body">
    <!-- Data list view starts -->
    <section id="data-thumb-view" class="data-thumb-view-header">
        <div class="action-btns d-none">
            <div class="btn-dropdown mr-1 mb-1">
                <div class="btn-group dropdown actions-dropodown">
                </div>
            </div>
        </div>
        <!-- dataTable starts -->
        <div class="table-responsive">
            <table class="table data-thumb-view">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.order.order_receiverName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.product.product_name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.orderItem_quantity)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.product_price)
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.order.order_receiverName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.product.product_name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.orderItem_quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.product_price)
                        </td>
                        <td>
                            <div class="actions row">
                                <a class="text-info" href="@Url.Action("Details", new { id1 = item.order_id, id2 = item.product_id})">
                                    <i class='ficon feather icon-list'></i>
                                </a>
                                <a class="text-warning" href="@Url.Action("Edit", new { id1 = item.order_id, id2 = item.product_id})">
                                    <i class='ficon feather icon-edit-1'></i>
                                </a>
                                <a class="text-danger" href="@Url.Action("Delete", new { id1 = item.order_id, id2 = item.product_id})">
                                    <i class='ficon feather icon-trash-2'></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- dataTable ends -->
    </section>
    <!-- Data list view end -->

</div>
