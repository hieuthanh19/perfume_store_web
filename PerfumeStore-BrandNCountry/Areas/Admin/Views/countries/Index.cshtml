@model IEnumerable<Model.EF.country>

@{
    ViewBag.Title = "Country Management";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-header row">
    <div class="content-header-left col-md-12 col-12 mb-2">
        <div class="row breadcrumbs-top">
            <div class="col-12">
                <h2 class="content-header-title float-left mb-0">Country (@Model.Count())</h2>
                <div class="breadcrumb-wrapper col-12">
                    @*<ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="./">Dashboard</a>
                            </li>
                            <li class="breadcrumb-item">
                                Brands
                            </li>
                        </ol>*@
                </div>
            </div>
        </div>
    </div>
</div>
<div class="content-body">
    <!-- Data list view starts -->
    <section id="data-thumb-view" class="data-thumb-view-header">
        <div class="action-btns d-none">
            <div class="btn-dropdown mr-1 mb-1">
                <div class="btn-group dropdown actions-dropodown">
                </div>
            </div>
        </div>
        <!-- dataTable starts -->
        <div class="table-responsive">
            <table class="table data-thumb-view">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.country_id)</th>
                        <th>
                            @Html.DisplayNameFor(model => model.country_name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.country_createdAt)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.country_status)
                        </th>
                        <th>Actions</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.country_id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.country_name)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.country_createdAt)
                        </td>
                        <td class="@(item.country_status == 1 ? "active" : "locked") ">

                            @if (item.country_status == 1)
                            {
                                <i class='ficon feather icon-check-circle'></i>
                            }
                            else
                            {
                                <i class='ficon feather icon-x-circle'></i>
                            }
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.country_id }, new { @class = "text-success" }) |
                            @Html.ActionLink("Details", "Details", new { id = item.country_id }, new { @class = "text-info" }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.country_id }, new { @class = "text-danger" })
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- dataTable ends -->
    </section>
    <!-- Data list view end -->

</div>


