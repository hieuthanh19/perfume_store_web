@model Model.DAO.ProductNProductImgDAO

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-header row">
    <div class="content-header-left col-md-12 col-12 mb-2">
        <div class="row breadcrumbs-top">
            <div class="col-12">
                <h2 class="content-header-title float-left mb-0">Create</h2>
                <div class="breadcrumb-wrapper col-12">
                    @*<ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="./">Dashboard</a>
                            </li>
                            <li class="breadcrumb-item">
                                Brands
                            </li>
                        </ol>*@
                </div>
            </div>
        </div>
    </div>
</div>
<div class="content-body">
    <div class="row">

        @Html.ActionLink("<< Back to List", "Index", null, new { @class = "col-md-2 mt-1" })
    </div>
    @using (Html.BeginForm("Create", "products", FormMethod.Post,new { enctype = "multipart/form-data"}))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group row">
                @Html.LabelFor(model => model.Product.product_name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.Product.product_name, new { htmlAttributes = new { @class = "form-control" } })
                    
                    @Html.ValidationMessageFor(model => model.Product.product_name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Product.product_volume, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.EditorFor(model => model.Product.product_volume, new { htmlAttributes = new { @type = "number", @min = "1", @max = "1000", @step = "1", @class = "form-control" } })                    
                    @Html.ValidationMessageFor(model => model.Product.product_volume, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Product.product_quantity, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.EditorFor(model => model.Product.product_quantity, new { htmlAttributes = new { @type = "number", @min = "1", @max = "10000", @step = "1", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Product.product_quantity, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Product.category_id, "Category", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.DropDownList("category_id", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Product.category_id, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Product.brand_id, "Brand", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.DropDownList("brand_id", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Product.brand_id, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Product.product_originalPrice, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.EditorFor(model => model.Product.product_originalPrice, new { htmlAttributes = new { @type = "number", @min = "0", @max = "10000",@step = ".01", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Product.product_originalPrice, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Product.product_currentPrice, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.EditorFor(model => model.Product.product_currentPrice, new { htmlAttributes = new { @type = "number", @min = "0", @max = "10000", @step = ".01", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Product.product_currentPrice, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Product.product_description, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.TextAreaFor(model => model.Product.product_description, new { @class = "form-control", @cols = "80", @rows = "5" })
                    @Html.ValidationMessageFor(model => model.Product.product_description, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.productImg.img_path, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">                 
                    <input type="file" name="imgFile" accept="image/*, .pdf" required />
                    @Html.ValidationMessageFor(model => model.imgFile, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Product.product_status, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.DropDownList("product_status", null, htmlAttributes: new { @class = "form-control" })
                    @*@Html.EditorFor(model => model.Product.product_status, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.ValidationMessageFor(model => model.Product.product_status, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-2"></div>
                <div class="col-md-offset-2 col-md-5">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</div>
